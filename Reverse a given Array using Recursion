//Reverse a given Array using Recursion
#include<bits/stdc++.h>
using namespace std;
void Printarray(int ans[],int n)
{
    for(int i=0;i<n;i++)
    {
        cout<<ans[i]<<" ";
    }
}

void reversefun(int arr[],int n)
{
    int ans[n];
    for(int i=n-1;i>=0;i--)
    {
        ans[n-i-1]=arr[i];
    }
    Printarray(ans,n);
}

int main()
{
    int n=5;
    int arr[5]={1,2,3,4,5};
    reversefun(arr,n);
}






















